{% extends 'base.html.twig' %}

{% block title %}Список постов{% endblock %}

{% block body %}

    <style>
        .posts {
            margin: 5px;
        }

        .item {
            margin: 0 0 20px 0;
            background-color: #b1b0b8;
            padding: 10px 15px;
        }
    </style>

    <div class="search">

        <form action="" method="post">
            <input type="text" name="search" value="{{ app.request.get('search') }}">
            <input type="submit" value="Поиск">
        </form>
    </div>

    <div class="posts">
        {% for post in posts %}
            <div class="item">
                {{ post.content | raw }}
                <div class="image">
                    <img src="{{ post.image }}" alt="">
                </div>

            </div>
        {% endfor %}
    </div>

{% endblock %}
